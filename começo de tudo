/*
pino 2 sensor de luz

Pino 10 - Dist Echo 
Pino 8 Dist Trig

pino 6 e 7 -> sentido do motor esquerdo
pino 9 -> PWM do motor esquerdo

pino 4 e 5 -> sentido do motor direito
pino 3 -> PWM do motor direito
*/

// andar(0); -> trás
// andar(1); -> frente

/*A PORRA DO SENSOR DE LUZ ESTÁ LIGADO NUMA ENTRADA DIGITAAAAAAAAAAL
ISSO VAI SER UMA DESGRAÇA*/

void setup() {
  // put your setup code here, to run once:
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
  andar(1);
  delay(1000);
  andar(0);
  delay(1000);
}

void andar(bool dir, int pot){
  if(dir == 0){
    digitalWrite(6, 1);
    digitalWrite(7, 0);
    digitalWrite(4, 1);
    digitalWrite(5, 0);
    analogWrite(3, pot);
    analogWrite(9, pot);
  }
  else{
    digitalWrite(6, 0);
    digitalWrite(7, 1);
    digitalWrite(4, 0);
    digitalWrite(5, 1);
    analogWrite(3, pot);
    analogWrite(9, pot);
  }
}
